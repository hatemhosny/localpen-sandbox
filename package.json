{
  "name": "result.localpen.io",
  "version": "0.4.0",
  "description": "Result page for localpen.io",
  "main": "index.js",
  "author": "Hatem Hosny",
  "license": "MIT",
  "keywords": [],
  "private": true,
  "repository": {
    "url": "https://github.com/hatemhosny/result.localpen.io"
  },
  "scripts": {
    "build": "node ./scripts/build.js && tsc --noEmit",
    "website:publish": "run-s build gh-pages",
    "gh-pages": "gh-pages -m \"[ci skip] Updates\" -d build",
    "fix": "npm run fix:prettier && npm run fix:eslint",
    "fix:prettier": "prettier src --ignore-path .eslintignore --write",
    "fix:eslint": "eslint --fix --ext js,jsx,ts,tsx .",
    "test": "npm run test:unit && npm run test:prettier && npm run test:eslint",
    "test:unit": "jest src",
    "test:prettier": "prettier src --ignore-path .eslintignore --list-different",
    "test:eslint": "eslint --ext js,jsx,ts,tsx . ",
    "release": "standard-version",
    "prepush": "run-s fix build test"
  },
  "dependencies": {
    "es-module-shims": "0.10.5"
  },
  "devDependencies": {
    "@types/jest": "25.2.3",
    "@types/node": "14.0.4",
    "@typescript-eslint/eslint-plugin": "4.8.2",
    "@typescript-eslint/parser": "4.8.2",
    "cz-conventional-changelog": "3.2.0",
    "esbuild": "0.12.5",
    "eslint": "7.14.0",
    "eslint-config-prettier": "6.11.0",
    "eslint-plugin-import": "2.20.2",
    "eslint-plugin-jest": "23.13.1",
    "eslint-plugin-jsdoc": "25.4.2",
    "eslint-plugin-prefer-arrow": "1.2.1",
    "gh-pages": "3.2.0",
    "jest": "26.0.1",
    "prettier": "2.2.1",
    "standard-version": "9.3.0",
    "ts-jest": "26.0.0",
    "typescript": "4.1.3"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "trailingComma": "all",
    "printWidth": 100
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "jsdom",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/build/"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!**/build/**",
      "!**/vendor/**",
      "!src/modules/**"
    ],
    "coverageReporters": [
      "json",
      "html",
      "lcov"
    ]
  }
}
